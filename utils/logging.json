{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "[%(asctime)s] (%(name)-7s [%(filename)s:%(lineno)-4d]) %(levelname)s %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "cli": {
      "format": "[%(asctime)s] (%(name)-7s) %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "stdout": {
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "level": "INFO",
      "formatter": "default"
    },
    "stdout_cli": {
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "level": "INFO",
      "formatter": "cli"
    },
    "logfile": {
      "class": "logging.FileHandler",
      "filename": "$AUTOMATION_DIR/logs/output-$LOG_NAME.log",
      "mode": "w",
      "level": "INFO",
      "formatter": "cli"
    }
  },
  "loggers": {
    "default": {
      "handlers": [
        "stdout"
      ],
      "level": "INFO",
      "propagate": false
    },
    "cli": {
      "handlers": [
        "stdout_cli"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}
